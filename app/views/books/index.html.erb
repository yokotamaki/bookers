<div class="wrapper">
  <h1 class="heading">Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destory", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      </tr>   
    <% end %>
  </table>
  
  <h4 class="new-heading">New book</h4>
  <%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p class="form-body">Body</p>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
  <% end %>    
</div>