<h3>Books</h3>
<table>
    <tr>
      <th>Title</th>
      <th>Body</th>
  </tr>
<% @books.each do |book| %>
  <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
  </tr>
</table>
<% end %>

<h2>New book</h2>
<% form_with model:@book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>    
