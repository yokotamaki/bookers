<div class="wrapper">
  <h1 class="heading">Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <div class="error-wrapper">
        <h4 class="errors"><%= @book.errors.count %>error</h4> 
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li class="error"><%= message %></li>
          <% end %>
        </ul>  
      </div>  
    <% end %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p class="form-body">Body</p>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
    <div class="btn">
      <%= link_to "Show", book_path(@book.id) %>
      <p class="between">|</p>
      <%= link_to "Back", books_path %>
    </div>
  <% end %>    
</div>